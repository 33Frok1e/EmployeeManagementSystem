@model EditViewModel
@{
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "image1.jpg");
}

<form enctype="multipart/form-data" asp-controller="Employee" asp-action="edit" method="post" class="mt-3">
    <div class="form-group row">

        <div class="text-danger" asp-validation-summary="All"></div>
        <input hidden asp-for="ID" />
        <input hidden asp-for="ExistingPhotoPath" />

        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="form-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Choose...</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control custom-file-input" placeholder="click here to change">
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4 mt-2 mb-2">
        <img src="@photoPath" alt="Existing Photo" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="submit" asp-controller="Employee" asp-action="Index" class="btn btn-primary">Cancel</button>
        </div>
    </div>
</form>