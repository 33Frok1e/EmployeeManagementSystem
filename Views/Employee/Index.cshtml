@model IEnumerable<Employee>

<div class="card-group">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "image1.jpg");
        <div class="card m-3 cardDesign">
            <div class="card-header">
                <h4>@employee.Name</h4>
            </div>
            <img class="card-img-top img-fluid imageThumbnail" asp-append-version="true" src="@photoPath" alt="Employee Picture" />
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Details" asp-route-Id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="Employee" asp-action="Edit" asp-route-Id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>